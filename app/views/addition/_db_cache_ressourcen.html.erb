<div class="page_caption">DB-cache usage historic</div>

<% @update_area = get_unique_area_id %>

<%= ajax_form(:controller=>:addition, :action=>:list_db_cache_historic, :update_area=>@update_area) do %>
  <div class="float_left">
    Max. result count
    <%= text_field_tag(:maxResultCount, "100", :size=>5, :title => "Maximum number of rows in result list ordered by used blocks in cache") %>
  </div>
  <%= include_start_end_timepicker_float_left %>
  <div class="float_left" title="<%= t(:instance_optional_filter_hint, :default=>'Filter on specific RAC instance (optional)') %>">
    Instance
    <%= text_field_tag(:instance, read_from_client_info_store(:instance), :size=>1) %>
  </div>
  <div class="float_left">
    Partitions
    <%= check_box_tag(:show_partitions, 1, false, :title=>"Show detailed partition info ?\nOr sum partition values per table/index otherwise") %>
  </div>
  <div class="float_left">
    <%= submit_tag("Show", :title => "Show historic DB-cache usage") %>
  </div>
<% end %>
<div id="<%= @update_area %>" style="float:left; width:100%;">
</div>


