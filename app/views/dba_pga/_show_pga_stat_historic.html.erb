<%= render_page_caption("PGA-history from #{PanoramaSamplerStructureCheck.adjust_table_name('DBA_Hist_PGAStat')}") %>


<%= ajax_form(:controller=>:dba_pga, :action=>"list_pga_stat_historic", :update_area=>"list_pga_stat_historic_area") do %>
  <div class="flex-row-container">
    <%= include_start_end_timepicker %>
    <div class="flex-row-element" title="<%= t(:instance_optional_filter_hint, :default=>'Filter on specific RAC instance (optional)') %>">
      Instance
      <%= text_field_tag(:instance, (read_from_client_info_store(:instance) ? read_from_client_info_store(:instance) : 1), :size=>1) %>
    </div>
    <div class="flex-row-element">
      <%= submit_tag("Show PGA usage", :title => "Show PGA usage in period") %>
    </div>
  </div>
<% end %>
<div id="list_pga_stat_historic_area" style="float:left; width:100%;">

</div>
