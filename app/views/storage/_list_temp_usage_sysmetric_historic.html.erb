<%
  @update_area = get_unique_area_id

  column_options =
      [
          {:caption=>'Start timestamp',           :data=>proc{|rec| localeDateTime(rec[:normalized_begin_time]) },          :title=>'Begin of considered time interval', :data_title=>proc{|rec| "%t\nTEMP-usage recorded between #{localeDateTime(rec[:min_begin_time])} and #{localeDateTime(rec[:max_end_time])}"}, :plot_master_time=>true},
          {:caption=>'Total (MB)',                :data=>proc{|rec| fn(rec[:total]/(1024*1024), 2) },                       :title=>'Total used TEMP-tablespace in MB over all instances', :data_title=>proc{|rec| "%t\nTEMP-usage recorded between #{localeDateTime(rec[:min_begin_time])} and #{localeDateTime(rec[:max_end_time])}"}, :align=>:right},
      ]
  @instances.keys.sort.each do |i|
    column_options << {:caption=>"Inst #{i} (MB)",  :data=>proc{|rec| fn(((rec[i][:value])/(1024*1024) rescue nil), 2) },                  :title=>"Maximum used TEMP-tablespace in MB for RAC-instance #{i}", :data_title=>proc{|rec| "%t\nTEMP-usage recorded between #{localeDateTime(rec[i][:begin_time])} and #{localeDateTime(rec[i][:end_time])}" rescue nil}, :align=>:right}
  end

%>

<%= gen_slickgrid(@temp_usage, column_options, {
    :max_height       => 450,
    :caption          => "TEMP-usage between #{localeDateTime(@time_selection_start)} and #{localeDateTime(@time_selection_end)}",
    :multiple_y_axes  => false

}) %>

<div id="<%= @update_area %>" style="clear: both;">
</div>
