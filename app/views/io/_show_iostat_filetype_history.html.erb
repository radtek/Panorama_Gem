<div class="page_caption">I/O History from DBA_Hist_IOStat_Filetype</div>

<%= ajax_form(:controller=> :io, :action => :list_iostat_filetype_history, :update_area => :list_iostat_filetype_history_area) do %>
  <div class="flex-row-container">

    <%= include_start_end_timepicker %>

    <div class="flex-row-element" title="<%= t(:instance_optional_filter_hint, :default=>'Filter on specific RAC instance (optional)') %>">
      Instance
      <%= text_field_tag(:instance, "", :size=>1) %>
    </div>
    <div class="flex-row-element">
      <%= t(:grouping, :default=>"Grouped by") %>
    </div>
    <div class="flex-row-element" title="<%= t(:grouping_hint, :default=>'Group result by attribute') %>">
      <select name="groupby">
        <% iostat_filetype_key_rules.each do |key, value| %>
          <%=  "<option value='#{key}' #{"selected='selected'" if key=="Instance"}>#{key}</option>".html_safe %>
        <% end %>
      </select>
    </div>

    <div class="flex-row-element">
      <%= submit_tag("Show I/O history", :title => "Show I/O history") %>
    </div>
  </div>

<% end %>

<div id="list_iostat_filetype_history_area" style="float:left; width:100%; ">
</div>

