<%= ajax_form(:action => "find_dependencies", :update_area => :dependencies, :username => @username) do %>
  <div class="flex-row-container">
    <div class="flex-row-element">
      <%=@username%>.
    </div>
    <div class="flex-row-element" title="Ausahl der Tabelle deren abhängige Tabellen gesucht werden">     <!-- special IE-Hack because of bug http://bugs.jqueryui.com/ticket/8798  -->
      <%= collection_select(:all_table, :table_name, @all_tables, :table_name, :table_name, {}) %>
    </div>
    <div class="flex-row-element" title="Eingrenzung der Ergebnis-Suche auf folgendes Schema">     <!-- special IE-Hack because of bug http://bugs.jqueryui.com/ticket/8798  -->
      <%= collection_select(:filter_user, :username, @filter_users, :username, :username, {}) %>
    </div>
    <div class="flex-row-element">
      <%= submit_tag("Abhängigkeiten anzeigen", :title => "Anzeige der Abhängigkeiten") %>
    </div>
  </div>
<% end %>
