<% @update_area = get_unique_area_id %>

<%= render_page_caption("#{ t(:dba_sga_show_sql_area_caption, :default=>'Resource-intensive SQL statements from')} #{@source_table}") %>

<%= ajax_form(:controller=>:dba_sga, :action=>@action, :update_area=>@update_area) do %>
    <div class="float_left" title="<%= t(:dba_sga_show_sql_area_max_result_count_hint, :default=>'Restrict result size to number of lines (after sort)')%>">
      <%= t(:dba_sga_show_sql_area_max_result_count_caption, :default=>'Hit limit') %>
      <%= text_field_tag(:maxResultCount, "100", :size=>5) %>
    </div>

    <div class="float_left" title="<%= t(:dba_sga_show_sql_area_filter_hint, :default=>'Filter string must be found in considered SQL statement. Wildcards (%,_) can be used in filter. (optional)') %>">
      Filter
      <%= text_field_tag(:filter, "", :size=>50) %>
    </div>

    <div class="float_left" title="<%= t(:instance_optional_filter_hint, :default=>'Filter on specific RAC instance (optional)') %>">
      Instance
      <%= text_field_tag(:instance, "", :size=>1) %>
    </div>

    <div class="float_left" title="<%= t(:dba_sga_show_sql_area_user_hint, :default=>'Filter result on username at cursor creation') %>">
      User
      <%= text_field_tag(:username, "", :size=>15) %>
    </div>

    <div class="float_left" title="<%= t(:sqlid_optional_filter_hint, :default=>'Filter on specific SQL-ID (optional, wildcards (%,_) can be used)') %>">
      SQL-ID
      <%= text_field_tag(:sql_id, "", :size=>14) %>
    </div>

    <div class="float_left" title="<%= t(:dba_history_show_sql_area_historic_sorted_by_hint, :default=>'Result sorted in ascending order by this criteria') %>">
      <%= t(:sorted_by, :default=>'Sorted by') %>
      <select name="topSort">
        <option value="ElapsedTimePerExecute"     >Elapsed time per execute</option>
        <option value="ElapsedTimeTotal" selected >Elapsed time total</option>
        <option value="ExecutionCount"            >Total number of executions</option>
        <option value="ParseCalls"                >Total number of parse calls</option>
        <option value="RowsProcessed"             >Number of rows processed</option>
        <option value="ExecsPerDisk"              >Number of executions per disk-read</option>
        <option value="BufferGetsPerRow"          >Buffer gets per result-row</option>
        <option value="CPUTime"                   >CPU-time total</option>
        <option value="BufferGets"                >Buffer Gets total</option>
        <option value="ClusterWaits"              >Cluster wait time total</option>
        <option value="LastActive"                ><%= t(:dba_sga_show_sql_area_sort_last_active_hint, :default=>'Timestamp of last execution')%></option>
        <option value="Memory"                    ><%= t(:dba_sga_show_sql_area_sort_memory_hint, :default=>'Amount of allocated memory in SGA')%></option>
      </select>
    </div>

    <div class="float_left">
      <%= submit_tag(t(:dba_sga_show_sql_area_submit_caption, :default=>'Show SQL'), :title => t(:dba_sga_show_sql_area_submit_hint, :default=>'Show SQL statements according to filter conditions')) %>
    </div>

<% end %>
<div id="<%= @update_area %>" style="float:left; width:100%;">


</div>
