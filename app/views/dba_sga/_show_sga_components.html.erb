<div class="page_caption"><%= t(:dba_sga_show_sga_components_caption, :default=>'Show memory consumption in SGA') %></div>


<%= ajax_form(:controller=>:dba_sga, :action=>"list_sga_components", :update_area=>"show_sga_components_area") do %>
  <div class="flex-row-container">
    <div class="flex-row-element" title="<%= t(:instance_optional_filter_hint, :default=>'Filter on specific RAC instance (optional)') %>">
      Instance
      <%= text_field_tag(:instance, "", :size=>1) %>
    </div>
    <div class="flex-row-element">
      <%= submit_tag(t(:dba_sga_show_sga_components_submit_caption, :default=>'Show memory components'), :title => t(:dba_sga_show_sga_components_submit_hint, :default=>'Show memory components of SGA')) %>
    </div>
  </div>
<% end %>
<div id="show_sga_components_area"></div>
