<% @update_area = get_unique_area_id %>

<div class="page_caption">Historic DB-cache advice from DBA_Hist_DB_Cache_Advice</div>

<%= my_ajax_form_tag url_for(:controller=>:dba_sga, :action=>:list_db_cache_advice_historic, :update_area=>@update_area)  do %>
    <%= include_start_end_timepicker %>
    <div class="float_left" title="<%= t(:instance_optional_filter_hint, :default=>'Filter on specific RAC instance (optional)') %>">
      Instance
      <%= text_field_tag(:instance, read_from_client_info_store(:instance), :size=>1) %>
    </div>
    <div class="float_left">
      <%= submit_tag("Show", :title => "Show historic DB-cache advices") %>
    </div>
<% end %>
<div id=<%= @update_area %> style="clear:both"></div>
