<div class="page_caption">Generate genuine Oracle ASH global report for RAC</div>


<%= form_tag(url_for(:controller=>:dba_history, :action=>:list_ash_global_report_html, browser_tab_id: @browser_tab_id), {:method => 'post', :target=>'_blank'}) do %>
    <%= include_start_end_timepicker_float_left %>

    <div class="float_left" title="<%= t(:instance_optional_filter_hint, :default=>'Filter on specific RAC instance (optional)') %>">
      Instance
      <%= text_field_tag(:instance, read_from_client_info_store(:instance), :size=>1) %>
    </div>
    <div class="float_left">
      <%= submit_tag('Generate ASH report', :title =>'Generate ASH-report by executing DBMS_WORKLOAD_REPOSITORY.ASH_GLOBAL_REPORT_HTML') %>
    </div>
<% end %>

