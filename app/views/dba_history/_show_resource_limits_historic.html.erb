<%= render_page_caption("Resource usage and limits from #{PanoramaSamplerStructureCheck.adjust_table_name('DBA_Hist_Resource_Limit')}") %>

<% @update_area = get_unique_area_id %>

<%=
    ajax_form(:controller  => :dba_history,
                             :action      => :list_resource_limits_historic,
                             :update_area => @update_area
                     ) do%>
  <div class="flex-row-container">
    <%= include_start_end_timepicker %>
    <div class="flex-row-element" title="RAC-Instance (optional)">
      RAC-Instance
      <%= text_field_tag(:instance, read_from_client_info_store(:instance), :size=>3) %>
    </div>

    <div class="flex-row-element">
      <div title="Restrict result to resource name">     <!-- special IE-Hack because of bug http://bugs.jqueryui.com/ticket/8798  -->
        Resource name
        <%= collection_select(:resource, :name, @names, :resource_name, :resource_name, {}) %>
      </div>
    </div>

    <div class="flex-row-element">
      <%= submit_tag('Show', :title => 'Show resource limits') %>
    </div>
  </div>
<% end %>

<div id="<%= @update_area%>" style="clear:both">
</div>

