<div class="page_caption"><%= t(:dba_show_sessions_caption, :default=>"Show sessions") %></div>
<% @update_area = get_unique_area_id %>

       <%= my_ajax_form_tag url_for(:controller => :dba, :action => "list_sessions", :update_area=>@update_area) do  %>
  <div class="float_left">
    <%= t(:dba_show_sessions_only_active_caption, :default=>"Active only") %>
    <%= check_box_tag(:onlyActive, 1, true, :title=>t(:dba_show_sessions_only_active_hint, :default=>"Show active sessions only")) %>
  </div>
  <div class="float_left">
    Parallel Query
    <%= check_box_tag(:showPQServer, 1, false, :title=>t(:dba_show_sessions_pq_hint, :default=>"Show parallel query sessions")) %>
  </div>
  <div class="float_left">
    <%= t(:dba_show_sessions_only_user_caption, :default=>"User only") %>
    <%= check_box_tag(:showOnlyUser, 1, true, :title=>t(:dba_show_sessions_only_user_hint, :default=>"Show user sessions only")) %>
  </div>
  <div class="float_left">
    <%= t(:dba_show_sessions_only_db_link_caption, :default=>"DB links only") %>
    <%= check_box_tag(:showOnlyDbLink, 1, false, :title=>t(:dba_show_sessions_only_db_link_hint, :default=>"Show sessions connected via db link only")) %>
  </div>
  <div class="float_left">
    Instance
    <%= text_field_tag(:instance, "", :size=>1, :title=>t(:instance_optional_filter_hint, :default=>"Limit to RAC-instance (optional)")) %>
  </div>
  <div class="float_left">
    Filter
    <%= text_field_tag(:filter, "", :size=>12, :title=>t(:dba_show_sessions_filter_hint, :default=>"Optional like-filter for client/shadow-process on: session-ID, process-ID, username, client info, module, action, machine, program")) %>
  </div>
  <div class="float_left">
    <%= submit_tag(t(:dba_show_sessions_submit_caption, :default=>"Show sessions"), :title => t(:dba_show_sessions_submit_hint, :default=>"Show sessions according to given filters")) %>
  </div>
<% end %>
<div style="clear: both" id="<%= @update_area %>">
</div>


