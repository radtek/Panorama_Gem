<%
column_options =
[
  {:caption=>"Instance",         :data=>proc{|rec| fn(rec.inst_id)},                    :title=>"RAC Instance-Number", :align=>"right"},
  {:caption=>"Group",            :data=>proc{|rec| fn(rec.groupno)},                    :title=>"Redo-Log-Group", :align=>"right"},
  {:caption=>"Size (kBytes)",    :data=>proc{|rec| formattedNumber(rec.kbyte)},         :title=>"Size of one logfile in KByte", :align=>"right"},
  {:caption=>"Status",           :data=>proc{|rec| rec.status},                         :title=>"Status of logfile"},
  {:caption=>"Start timestamp",  :data=>proc{|rec| localeDateTime(rec.starttime)},      :title=>"Timestamp for start of recording in logfile"},
  {:caption=>"Members",          :data=>proc{|rec| rec.members},                        :title=>"Number of members", :align=>"right"},
  {:caption=>"Archived",         :data=>proc{|rec| rec.archived},                       :title=>"Archived"},
]

%>

<%=
    gen_slickgrid(@redologs, column_options, {
            :caption => "Redo-Logfiles at #{localeDateTime(Time.now)}",
            :width=>:auto,
    })
%>

